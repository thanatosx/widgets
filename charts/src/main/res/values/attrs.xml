<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="PieChartView">
        <attr name="pcvBorderColor" format="color|reference"/>
        <attr name="pcvBorderWidth" format="dimension|reference"/>
        <attr name="pcvRadius" format="dimension|reference"/>
        <attr name="pcvLabelFontSize" format="dimension|reference"/>
        <attr name="pcvTextFontSize" format="dimension|reference"/>
        <attr name="pcvTextColor" format="color|reference"/>
    </declare-styleable>

    <declare-styleable name="LineChartView">
        <attr name="lcvXText" format="reference|string"/>
        <attr name="lcvYText" format="reference|string"/>
        <attr name="isShowHorizontalLine" format="boolean"/>
        <attr name="isShowVerticalLine" format="boolean"/>
        <attr name="gridColor" format="reference|color"/>
        <attr name="coordinateLineColor" format="reference|color"/>
        <attr name="coordinateLineWidth" format="reference|dimension"/>
        <attr name="verticalSpace" format="reference|dimension"/>
        <attr name="horizontalSpace" format="reference|dimension"/>
        <attr name="lcvLineColor" format="reference|color"/>
        <attr name="lcvLineWidth" format="reference|dimension"/>
    </declare-styleable>

</resources>